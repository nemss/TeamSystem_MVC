@model UserListingsViewModel
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "User Administration";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<br/>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">
                Username
            </th>
            <th>
                E-mail
            </th>
            <th>
                User Roles
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <th>
                    @user.Username  
                </th>
                <th>
                    @user.Email
                </th>
                <th>
                    @{
                        var userById = await UserManager.FindByIdAsync(user.Id);
                        var userRoles = await UserManager.GetRolesAsync(userById);
                    }

                    <ul class="list-unstyled">
                        @foreach (var role in userRoles)
                        {
                            <li>
                                @role
                            </li>
                            <hr/>
                        }
                    </ul>
                </th>
                <th>
                    <div>
                        <div class="row">
                            <div class="col-md-12">
                                <input type="hidden" name="UserId" value="@user.Id" />
                                <select name="Role" asp-items="Model.Roles" class="form-control"></select>
                            </div>
                        </div>
                        <hr/>
                        <div class="row">
                            <form class="col-md-4 col-md-offset-1" asp-action="AddToRole" method="post">
                                    <button class="btn btn-sm btn-success" type="submit">
                                        Add Role
                                    </button>
                            </form>
                            @if (User.IsInRole(WebConstants.AdministratorRole) && user.Username != User.Identity.Name)
                            {
                                <form class="col-md-4 col-md-offset-2" asp-area="Admin" asp-controller="Users" asp-action="DeleteUser" asp-route-userId="@user.Id">
                                        <button class="btn btn-sm btn-danger" type="submit">
                                            Delete User
                                        </button>
                                </form>
                            }
                        </div>
                    </div>
                </th>
            </tr>
        }
    </tbody>
</table>

